{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"Frame Count": {
			"description": "The number of different frames.",
			"type": "integer"
		},

		"Frame Duration": {
			"description": "The length of each animation frame, in milliseconds.\nIt is also possible to provide the length of each frame separately in a list.",
			"oneOf": [
				{
					"type": "integer",
					"minimum": 1
				},
				{
					"type": "array",
					"items": {
						"type": "integer",
						"minimum": 1
					}
				}
			]
		},

		"Offset": {
			"description": "The offset applied to the Source Rectangles at each frame of animation.\nIt is also possible to provide the offset of each frame separately in a list.",
			"oneOf": [
				{
					"$ref": "/Leroymilo/FurnitureFramework/main/doc/schemas/point.json",
					"not": {
						"type": "object",
						"properties": {
							"X": { "const": 0 },
							"Y": { "const": 0 }
						}
					}
				},
				{
					"type": "array",
					"items": {
						"$ref": "/Leroymilo/FurnitureFramework/main/doc/schemas/point.json"
					}
				}
			]
		}
	},
	"required": ["Frame Count", "Frame Duration", "Offset"],
	"additionalProperties": false
}